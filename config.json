{
  "log_file": "logs/logs.json",
  "detection": {
    "arp_spoof": {
      "enabled": true
    },
    "syn_flood": {
      "enabled": true,
      "threshold": 100
    },
    "ping_flood": {
      "enabled": true,
      "threshold": 200
    },
    "port_scan": {
      "enabled": true,
      "max_ports_per_minute": 50
    }
  },
  "network": {
    "interface": "eth0",
    "monitor_ips": ["192.168.1.1", "192.168.1.5"]
  }
}
